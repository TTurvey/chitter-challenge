<html>

<h1>Chitter</h1>

  <body>

    <% if @user %>
      <h1><%= "Signed in as #{@user.firstname} #{@user.lastname}"%></h1>
      <form action="/peep" method="post">
        <fieldset>
          <input type="text" name='content' id='peep' placeholder = "What's happening?">
          <input type="submit" name="Peep" value="Peep">
        </fieldset>
      </form>
    <% else %>
      <h1>
        <form action="/sessions/login">
          <input type="submit" value="Log In">
        </form>
        <form action="/users/register">
          <input type="submit" value="Register">
        </form>
      </h1>
    <% end %>

    <% if @user %>
      <form action="/sessions/destroy" method="post">
        <input type="submit" value="Sign out" />
      </form>
    <% end %>

  </body>

</html> 